<%- include('head') %>
    <%- include('nav') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 my-5">
                <h1 class="text-center"> Login </h1>
                <p class="text-center lead"> Acesse sua conta ou crie uma nova</p>


                <%- include('messages') %>
                
                <div class="row">

                    <div class="div col-lg">
                        <h4>Faça seu cadastro</h4>
                        <p>Se você ainda não tem conta, preencha seus dados:</p>
 
                        <form action="/login/register" method="POST">
                            <div class="form-group">
                            <label>E-mail</label>
                            <input type="email" class="form-control" name="email">
                            </div>
                            <div class="form-group">
                            <label >Password</label>
                            <input type="password" class="form-control" name="password">
                            </div>
                            <button type="submit" class="btn btn-primary my-3">Criar minha conta</button>
                        </form>
                    </div>  

                    <div class="div col-lg">
                        <h4>Acesse sua conta</h4>
                        <p> Digite seus dados:</p>

                        <form action="/login/login" method="POST">
                            <div class="form-group">
                            <label>E-mail</label>
                            <input type="email" class="form-control" name="email">
                            </div>
                            <div class="form-group">
                            <label >Password</label>
                            <input type="password" class="form-control" name="password">
                            </div>
                            <button type="submit" class="btn btn-primary my-3">Entrar</button>
                        </form>
                    </div>  

                </div>

            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>
    <%- include('footer') %>