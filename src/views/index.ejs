    <%- include('head') %>
    <%- include('nav') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 my-5">
                <h1 class="text-center"> Agenda de contatos</h1>
                <p class="text-center lead"> Seus clientes estão abaixo</p>

                <%- include('messages') %>

                <% if(contatos.length > 0) { %>
                <div class="responsive-table">
                    <table class="table my-3">
                        <% contatos.forEach( contato => { %>
                            <tr>
                                <td><%= contato.nome %></td>
                                <td><%= contato.sobrenome %></td>
                                <td><%= contato.telefone %></td>
                                <td><%= contato.email %></td>
                                <td><a href="/contato/index/<%= contato._id %>"> Editar</a></td>
                                <td><a class="text-danger" href="/contato/delete/<%= contato._id %>"> Delete</a></td>

                            </tr>
                        <%  })  %>                        
                    </table>
                </div>
                <% } else { %> 
                    <p class="text-center lead"> Não há contatos cadastrados.</p>
                <% } %>
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>
    <%- include('footer') %>
  